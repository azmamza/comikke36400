<header class='top-page-header'>
  <div class='select-list-contents'>
    <%= link_to image_tag("logo.png", class:"icon"),root_path %>
    <ul class='lists-left'>
      <li><%= link_to 'ホーム', root_path, class: "home-list" %></li>
      <li><%= link_to 'ランキング', "#", class: "ranking-list" %></li>
    </ul>
    <%= form_with(url: search_posts_path, local: true, method: :get, class: "search-form") do |form| %>
      <%= form.text_field :keyword, placeholder: "作品名を検索", class: "search-input" %>
      <%= form.submit "検索", class: "search-btn" %>
    <% end %>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to '投稿する', new_post_path, class: "user-nickname" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>