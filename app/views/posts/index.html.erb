<%= render "shared/header" %>
<div class="main">
  <div class='title-contents'>
    <h2 class='service-title'>
      あなたの読みたいマンガが見つかる
    </h2>
    <p class='service-explain'>
      マンガ好きが集まるコミュニティサービス
    </p>
    <div class='store-btn'>
      <%= link_to image_tag("app-store.svg", class:"apple-btn"), "#" %>
      <%= link_to image_tag("google-play.png", class:"google-btn"), "#" %>
    </div>
  </div>
  <div class='post-contents'>
    <h2 class='title'>新着投稿</h2>
    <div class='post-lists'>
      <% if @posts.present? %>
        <% @posts.each do |post| %>
          <div class="list">
            <p class="posts-user"><%= link_to post.user.nickname, "#" %>さん</p>
            <p class="posts-name"><%= post.name %></p>
            <div class="col-md-6 mb-3">
              <div class=" posts-content">
                <h4 class="mb-3">評価：<%= post.rating %>点 <%= post.title %></h4>

              <!--星評価-->
              <div id="star-rate-<%= post.id %>"></div>
                <script>
                $('#star-rate-<%= post.id %>').raty({
                  size: 36,
                  starOff:  '<%= asset_path('star-off.png') %>',
                  starOn : '<%= asset_path('star-on.png') %>',
                  starHalf: '<%= asset_path('star-half.png') %>',
                  half: true,
                  readOnly: true,
                  score: <%= post.rating %>,
                });
                </script>  
              <!--/星評価-->

                <p><%= post.review %></p>
              </div>
            </div>
            <div class="col-md-12 edit-button">
              <% if current_user == post.user %>
                <%= link_to '口コミを編集', edit_post_path(@posts), method: :get, class:'btn btn-default' %>
                <%= link_to '口コミを削除', post_path(@posts), method: :delete, class:'btn btn-default' %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

<%= render "shared/footer" %>