<%= render "shared/header" %>

<div class="form-contents">
  <div class="form-main">
    <h2 class="form-title">会員情報入力</h2>
    <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>

      <%= render 'shared/error_messages', model: f.object %>
      <div class="form-group">
        <div class="form-group-row">
          <%= f.label :name, 'ニックネーム', class:'form-text' %>
          <span class="indispensable">必須</span>
          <div class="col-md-9">
            <%= f.text_field :nickname, class: "form-control" %>
          </div>
        </div>

        <div class="form-group-row">
          <%= f.label :name, 'メールアドレス', class:'form-text' %>
          <span class="indispensable">必須</span>
          <div class="col-md-9">
            <%= f.email_field :email, class: "form-control", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
          </div>
        </div>

        <div class="form-group-row">
          <%= f.label :name, 'パスワード', class:'form-text' %>
          <span class="indispensable">必須</span>
          <div class="col-md-9">
            <%= f.password_field :password, class: "form-control", id:"password", placeholder:"6文字以上の半角英数字" %>
          <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
          </div>
        </div>

        <div class="form-group-row">
          <%= f.label :name, 'パスワード(確認)', class:'form-text' %>
          <span class="indispensable">必須</span>
          <div class="col-md-9">
            <%= f.password_field :password_confirmation, class: "form-control", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
          </div>
        </div>

        <div class="form-group-row">
          <h2 class='form-bottom-text'>
            「会員登録」のボタンを押すことにより
            <span>利用規約</span>に同意したものとみなします。
          </h2>
        </div>

        <div class="form-group-row justify-content-end">
          <div class="col-md-9">
            <%= f.submit '会員登録', class:"btn btn-success" %>
          </div>
        </div>
      </div>

    <% end %>
  </div>
</div>

<%= render "shared/footer" %>
